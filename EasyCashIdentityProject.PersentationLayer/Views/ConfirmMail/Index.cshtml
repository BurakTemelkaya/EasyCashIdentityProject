@model ConfirmMailViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<head>    
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <br /><br />
        <form method="post">
            <input type="hidden" asp-for="Mail" value="@ViewBag.Email" class="form-control" />
            <h2>Mail Adresi: @ViewBag.Email</h2>
            <br />
            <label>Mail Adresinize Gelen 6 Haneli Kodu Giriniz</label>
            <input type="text" class="form-control" asp-for="ConfirmCode" />
            <br />
            <button class="btn btn-primary">Hesabı Aktifleştir</button>
        </form>
    </div>
    
</body>
